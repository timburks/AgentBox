#!/usr/local/bin/nush
(load "RadKit")

(get "/"
     (RESPONSE setValue:"text/html" forHTTPHeader:"Content-Type")
     (&html (&head)
            (&body style:"background-color:#008; color:#FFF; font-family:Helvetica;"
                   (&h1 "Sample")
                   (&p "This is a sample X Machine app."))))

(files "/*path:" "public")

(get "/*anything:"
     (RESPONSE setStatus:404)
     (&html (&body (&h1 "Not Found")
                   (&h3 "/" *anything)
                   (&p "Resource not found"))))

(RadHTTPServer run)
